<%- include("partials/header.ejs")%>

<div class="container text-center">
    <div class="jumbotron mt-3">
      <img class="d-block mx-auto mb-4"  width="100" height="100" role="img" src="<%= book.book_cover %>" alt="" preserveAspectRatio="xMidYMid slice" focusable="false">
      <h1><%= book.b_name %></h1>
      <small class="lead">Rating: <%=book.rating%> of 5 | Read Date: <%= read_date %></p>
      <a class="btn btn-lg btn-primary" href="/add-note/<%=book.id%>" role="button">Add Note</a>
      <a class="btn btn-lg btn-light" href="/edit-book/<%=book.id%>" role="button">Edit Info</a>
    </div>
  </div>

  <div class="album py-5 bg-body-tertiary">
    <div class="container-fluid">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <% locals.notes.forEach((note) => { %> 

        <div class="col note-<%=note.id%>">
          <div class="card shadow-sm">
            <div class="card-body">
              <p><%=note.note%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><a href="/edit/<%=note.id%>/<%=book.id%>">Edit</a></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><a href="/delete/<%=note.id%>/<%=book.id%>">Delete</a></button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%});%>     

      </div>
    </div>
  </div>

<%- include("partials/footer.ejs")%>